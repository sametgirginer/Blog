@model Blog.DAL.Uye

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/Genel.cshtml";
}

<div class="formarka">
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <h4>Giriş yap!</h4>

            @if (@ViewBag.girisHata != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.girisHata
                </div>
            }
            else if (@ViewBag.Hata != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Hata
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="EPosta">E-Posta</label>
                    @Html.TextBoxFor(model => model.EPosta, new { @class = "form-control",
                    @placeholder = "E-Posta Adresi", @type = "email", aria_describedby = "emailHelp" })
                </div>
                <div class="form-group">
                    <label for="Sifre">Şifre</label>
                    @Html.PasswordFor(model => model.Sifre, new { @class = "form-control", @placeholder = "Şifre" })
                </div>
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            }
        </div>
    </div>
</div>