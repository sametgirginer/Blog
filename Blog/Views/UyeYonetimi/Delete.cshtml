@model Blog.DAL.Uye

@{
    ViewBag.Title = "Üyeyi Sil";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<div class="listarka">
    <h4>Üyeyi silmek istediğinizden emin misiniz?</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">E-Posta</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">Yetki</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => Model.ID)</th>
                <td>@Html.DisplayFor(modelItem => Model.EPosta)</td>
                <td>@Html.DisplayFor(modelItem => Model.Ad)</td>
                <td>@Html.DisplayFor(modelItem => Model.Soyad)</td>
                    @if (Model.Yetki == 0)
                    {
                       <td>Kullanıcı</td>
                    }
                    else
                    {
                       <td>Yönetici</td>
                    }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <td><input type="submit" value="Sil" class="btn btn-danger" /></td>
                }
                </tr>
        </tbody>
    </table>

    <p>
        @Html.ActionLink("Kategori Listesine Dön", "Index", new { @area = "" }, new { @class = "btn btn-dark" })
    </p>
</div>