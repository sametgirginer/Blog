@model Blog.DAL.Kategori

@{
    ViewBag.Title = "Kategoriyi Düzenle";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<div class="listarka">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Kategoriyi Düzenle</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                <div class="input-group mb-3">
                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kategori Adı", @aria_label = "Kategori Adı", required = "" } })
                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Düzenle</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <hr />
    <p>@Html.ActionLink("Kategori Listesine Dön", "Index", new { @area = "" }, new { @class = "btn btn-dark" })</p>
</div>