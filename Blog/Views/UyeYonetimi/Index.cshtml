@model IEnumerable<Blog.DAL.Uye>

@{
    ViewBag.Title = "Üye Listesi";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<div class="listarka">
    <p>@Html.ActionLink("Yeni Üye Ekle", "Create", new { @area = "" }, new { @class = "btn btn-success" })</p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Üye ID</th>
                <th scope="col">Üye Adı</th>
                <th scope="col">Üye Soyadı</th>
                <th scope="col">E-Posta Adresi</th>
                <th scope="col">Yetki</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.ID)</th>
                    <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.EPosta)</td>
                        @if (item.Yetki == 0)
                        {
                            <td>Kullanıcı</td>
                        } else
                        {
                            <td>Yönetici</td>
                        }
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detaylar", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>