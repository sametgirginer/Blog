@model Blog.DAL.Kategori

@{
    ViewBag.Title = "Kategori Detayları";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<div class="listarka">
    <h4>Kategori Bilgileri</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => Model.ID)</th>
                <td>@Html.DisplayFor(modelItem => Model.Ad)</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    </table>

    <p>
        @Html.ActionLink("Kategori Listesine Dön", "Index", new { @area = "" }, new { @class = "btn btn-dark" })
    </p>
</div>