@model Blog.DAL.Konu

@{
    ViewBag.Title = "Konu Detayları";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<div class="listarka">
    <h4>Konu Detayları</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Yazar</th>
                <th scope="col">Tarih</th>
                <th scope="col">Kategori</th>
                <th scope="col">Slider</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => Model.ID)</th>
                <td>
                    @Html.DisplayFor(modelItem => Model.Uye.Ad)
                    @Html.DisplayFor(modelItem => Model.Uye.Soyad)
                </td>
                <td>@Model.Tarih.Day.@Model.Tarih.Month.@Model.Tarih.Year</td>
                <td>@Html.DisplayFor(modelItem => Model.Kategori.Ad)</td>
                <td>@Html.DisplayFor(modelItem => Model.OneCikar)</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    </table>

    @* Resim *@
    <img src="@Model.Resim" width="100%" height="250px">

    <hr />

    @* Başlık *@
    <h4>Başlık: @Model.Baslik</h4>
    @* İçerik *@
    <div class="card">
        <div class="card-body">
            @Html.Raw(Model.Icerik)
        </div>
    </div>

    <br />
    <p>
        @Html.ActionLink("Kategori Listesine Dön", "Index", new { @area = "" }, new { @class = "btn btn-dark" })
    </p>
</div>