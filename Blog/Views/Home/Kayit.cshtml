@model Blog.DAL.Uye

@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/Genel.cshtml";
}

<div class="formarka">
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <h4>Hala kayıt olmadıysan, tam yerindesin!</h4>
            @if (@ViewBag.Kayit != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Kayit
                </div>
            }
            else if (@ViewBag.Hata != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Hata
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h5>Kişisel</h5>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.EPosta, new { @class = "form-control",
                            @placeholder = "E-Posta Adresi", @type = "email", aria_describedby = "emailHelp" })
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", @placeholder = "Ad" })
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", @placeholder = "Soyad" })
                        </div>
                    </div>
                </div>

                <h5>Güvenlik</h5>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-lock"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.Sifre, new { @class = "form-control", @placeholder = "Şifre" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
            }
        </div>
    </div>
</div>